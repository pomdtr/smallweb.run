{
    "json.schemas": [
        {
            "fileMatch": [
                "smallweb.json",
                "smallweb.jsonc"
            ],
            "url": "https://schemas.smallweb.run/manifest"
        },
        {
            "fileMatch": [
                ".smallweb/config.json",
                ".smallweb/config.jsonc"
            ],
            "url": "https://schemas.smallweb.run/config"
        }
    ],
    "deno.enable": true,
    "deno.disablePaths": [
        "astro",
        "vscode/extension",
        "vite-project"
    ],
    "markdownlint.lintWorkspaceGlobs": [
        "**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
        "!**/*.code-search",
        "!**/bower_components",
        "!**/node_modules",
        "!**/.git",
        "!**/vendor",
        "!**/data",
    ],
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true,
        "**/cache": true,
        "**/.observablehq": true,
        "blog/_site": true,
    }
}
